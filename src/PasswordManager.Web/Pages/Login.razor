@page "/login"
@inject PasswordManager.Web.Services.AuthService AuthService
@inject NavigationManager Nav
@inject Blazored.LocalStorage.ILocalStorageService localStorage

<h3>Connexion</h3>

@if (errorMessage != null)
{
    <p style="color: red;">@errorMessage</p>
}

<input @bind="username" placeholder="Nom d'utilisateur" />
<input @bind="password" type="password" placeholder="Mot de passe" />
<button @onclick="HandleLogin">Se connecter</button>

@code {
    private string username = "";
    private string password = "";
    private string? errorMessage;

    private async Task HandleLogin()
    {
        var token = await AuthService.Login(username, password);
        if (token != null)
        {
            await localStorage.SetItemAsync("authToken", token); 
            Nav.NavigateTo("/passwords");
        }
        else
        {
            errorMessage = "Nom d'utilisateur ou mot de passe incorrect.";
        }
    }
}
